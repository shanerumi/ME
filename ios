#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    int GATDULA_num, GATDULA_counter;
    int *GATDULAelements;
    
    printf("Enter number of Elements: ");
    scanf("%d", &GATDULA_num);
    
    GATDULAelements = (int*) malloc(GATDULA_num * sizeof(int));
    
    if (GATDULAelements == NULL) {
        printf("Memory Allocation Failed!\n");
        return 1;
    }
    
    printf("Enter the %d Elements:\n", GATDULA_num);
    for (GATDULA_counter = 0; GATDULA_counter < GATDULA_num; GATDULA_counter++) {
        printf("Element %d: ", GATDULA_counter + 1);
        scanf("%d", &GATDULAelements[GATDULA_counter]);
    }
    
    printf("You Entered the following Elements:\n");
    for (GATDULA_counter = 0; GATDULA_counter < GATDULA_num; GATDULA_counter++) {
        printf("Element %d = %d\n", GATDULA_counter + 1, GATDULAelements[GATDULA_counter]);
    }
    
    free(GATDULAelements);
    
    return 0;
}
