}
		
	void himikoaddpatient(struct Patient** head, int patientid, char patientname, int patientage, char patientillness){
	struct Patient* himikonewpatient = createpatient(patientid, patientname, patientage, patientillness);
	
	if(*head == NULL){
		*head =	himikonewpatient;
		return 0;
	}
	 		struct Patient* temp = *head;
	 		while(temp -> next != NULL){
	 			temp = temp -> next;
			 }
			 temp -> next = himikonewpatient;
	}
	
	void himikocreatepatient(int patientid, char patientname, int patientage, char patientillness){
		struct Patient* himikonewpatient = (struct Patient*)malloc(sizeof(struct Patient));
		
		himikonewpatient -> patientid = patientid;
		strcpy(himikonewpatient -> patientid, patientid);
		himikonewpatient -> patientid = himikonewpatient;
		strcpy(himikonewpatient -> patientname, patientage);
		himikonewpatient -> patientid = himikonewpatient;
		strcpy(himikonewpatient -> patientname, patientage);
		himikonewpatient -> patientid = himikonewpatient;
		strcpy(himikonewpatient -> patientname, patientage);
	}

int main(int argc, char *argv[]) {
	
