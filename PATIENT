#include <stdio.h>
#include <stdlib.h>
#include <string.h>

	struct Patient{
		int patientid;
		char patientname[50];
		int patientage;
		char patientillness[100];
		struct Patient* next;
	};


	void himikomenu(){
		struct patient* head = NULL;
		char patientname[50];
		char patientillness[100];
	    int himikochoice;
	    int patientid;
	    int patientage;
		system("cls");
		
		while(1){
		printf("===== Patients Management System =====\n");
		printf("[1] Add Patient\n");
		printf("[2] Display All Patients\n");
		printf("[3] Search Patient\n");
		printf("[4] Delete Patient by ID\n");
		printf("[5] LOG OUT\n");
		printf("\n Enter Choice: ");
		scanf("%d", &himikochoice);
		
		switch(himikochoice){
			case 1:
				printf("Enter ID: ");
				scanf("%d", &patientid);
				
				printf("Enter Name: ");
				fgets(patientname, sizeof(patientname), stdin);
				patientname[strcpsn(&patientname, "\n")] = '\0';
				
				prinf("Enter Age: ");
				scanf("%d", &patientage);
				
				printf("Patient Illness: ");
				fgets(patientname, sizeof(patientname), stdin);
				patientname[strcpsn(&patientname, "\n")] = '\0';
				
				himikoaddpatient(&head, patientid, patientname, patientage, patientillness);
				printf("\n Patient Information is Sucsessfully saved.");
				
				break;
			case 2:
				printf("");
				break;
			case 3:
				printf("");
				break;
			case 4:
				printf("");
				break;
			case 5:
				printf("Exiting...");
				exit(0);
		 	default:
		 		printf("\n Invalid Choice. \n");
